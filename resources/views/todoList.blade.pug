html(lang='en')
    head
        meta(charset='UTF-8')
        meta(name='viewport' content='width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0')
        meta(http-equiv='X-UA-Compatible' content='ie=edge')
        link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl' crossorigin='anonymous')
        script(src='https://code.jquery.com/jquery-3.6.0.js' integrity='sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk=' crossorigin='anonymous')
        script(src='https://unpkg.com/sweetalert/dist/sweetalert.min.js')
        link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/sweetalert2@7.12.15/dist/sweetalert2.min.css')
        script(src='js/main.js')
        //script(src='js/test.js')
    body
        .container
            .row
                .col
                    h1  TODO LIST
                    input#title.form-control(type='text' name='title' placeholder='Введите название задачи')
                    br
                    textarea#body.form-control(placeholder='Введите текст задачи')
                    br
                    button.addTask.w-100.btn.btn-lg.btn-primary(type='submit') Добавить задачу
                #taskList.col
                    | @foreach ($tasks as $task)
                    li(id='task_'.$task->id)
                        | {{ $task->id }} {{ $task->title }} {{ $task->body }}
                        button.close.btn.btn-sm.btn-outline-secondary(onclick='deleteTask('.$task->id.')' type='button' aria-label='Close')
                            span(aria-hidden='true') &times;
                    | @endforeach
